    "@types/tmp": "^0.2.3",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.28.0",
    "expect": "^29.4.3",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "tmp-promise": "^3.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "vsce": "^2.15.0",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.0"
  }
}
